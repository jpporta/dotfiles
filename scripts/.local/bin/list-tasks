#! /bin/env bash

API_KEY=$(cat ~/.task-api-key)

if [ -z "$API_KEY" ]; then
  echo "API key not found. Please set your API key in ~/.task-api-key"
	exit 1
fi

if [ -z "$1" ]; then
		PAGE=0
else
		PAGE=$1
fi

curl -X GET "https://ticket.joaoporta.com/task?page=$PAGE&limit=10" \
	 -H "x-api-key: $API_KEY" -s 
