#!/usr/bin/env bash

opts="Gruvbox Light\nGruvbox Dark\nCatppuccin Latte\nCatppuccin Mocha\nDracula\nTokio Night\nRose Pine Dark\nRose Pine Light\nAyu Dark\nAyu Light\nMonokai Dark\nMonokai Light\nCobalt2\nSnazzy Dark"

select=$(printf "$opts" | wofi -dmenu -p "Select Color Scheme" -i --lines 7 --width 300 --height 200)

case $select in
  "Gruvbox Light")
	bash "$HOME/.local/bin/themes/gruvbox-light.sh"
	;;
  "Gruvbox Dark")
  bash "$HOME/.local/bin/themes/gruvbox-dark.sh"
	;;
  "Catppuccin Latte")
  bash "$HOME/.local/bin/themes/catpuccin-latte.sh"
	;;
  "Catppuccin Mocha")
  bash "$HOME/.local/bin/themes/catpuccin-mocha.sh"
	;;
  "Dracula")
  bash "$HOME/.local/bin/themes/dracula.sh"
	;;
  "Tokio Night")
  bash "$HOME/.local/bin/themes/tokio-night.sh"
	;;
  "Rose Pine Dark")
  bash "$HOME/.local/bin/themes/rose-pine.sh"
	;;
  "Rose Pine Light")
  bash "$HOME/.local/bin/themes/rose-pine-light.sh"
	;;
"Ayu Dark")
  bash "$HOME/.local/bin/themes/ayu-dark.sh"
	;;
"Ayu Light")
  bash "$HOME/.local/bin/themes/ayu-light.sh"
	;;
"Monokai Dark")
  bash "$HOME/.local/bin/themes/monokai-dark.sh"
	;;
"Monokai Light")
  bash "$HOME/.local/bin/themes/monokai-light.sh"
	;;
"Cobalt2")
  bash "$HOME/.local/bin/themes/cobalt2.sh"
	;;
"Snazzy Dark")
  bash "$HOME/.local/bin/themes/snazzy-dark.sh"
	;;
  *)
	echo "Invalid selection"
	exit 1
	;;
esac
