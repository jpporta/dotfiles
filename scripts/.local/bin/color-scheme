#!/usr/bin/env bash

opts="Gruvbox Light\nGruvbox Dark\nCatppuccin Latte\nCatppuccin Mocha\nDracula\nTokio Night\nRose Pine"

select=$(printf "$opts" | wofi -dmenu -p "Select Color Scheme" -i --lines 7 --width 300 --height 200)

case $select in
  "Gruvbox Light")
	bash "$HOME/.local/bin/themes/gruvbox-light.sh"
	;;
  "Gruvbox Dark")
  bash "$HOME/.local/bin/themes/gruvbox-dark.sh"
	;;
  "Catppuccin Latte")
  bash "$HOME/.local/bin/themes/catpuccin-latte.sh"
	;;
  "Catppuccin Mocha")
  bash "$HOME/.local/bin/themes/catpuccin-mocha.sh"
	;;
  "Dracula")
  bash "$HOME/.local/bin/themes/dracula.sh"
	;;
  "Tokio Night")
  bash "$HOME/.local/bin/themes/tokio-night.sh"
	;;
  "Rose Pine")
  bash "$HOME/.local/bin/themes/rose-pine.sh"
	;;
  *)
	echo "Invalid selection"
	exit 1
	;;
esac
